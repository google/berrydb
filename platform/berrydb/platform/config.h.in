#ifndef BERRYDB_PLATFORM_CONFIG_H_
#define BERRYDB_PLATFORM_CONFIG_H_

// This has to be a preprocessor macro because it is used to gate #include
// directives.
//
// This macro is namespaced because it ends up in BerryDB's public header files.
//
// After C++17 gains widespread support, this can be replaced with __has_include
// and most of the configuration can go away.
#cmakedefine BERRYDB_PLATFORM_HAVE_STD_STRING_VIEW

#endif  // BERRYDB_PLATFORM_CONFIG_H_
